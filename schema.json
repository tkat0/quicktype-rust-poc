{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Record",
  "type": "object",
  "required": [
    "id",
    "kind"
  ],
  "properties": {
    "data": {
      "anyOf": [
        {
          "$ref": "#/definitions/Data"
        },
        {
          "type": "null"
        }
      ]
    },
    "id": {
      "type": "string"
    },
    "kind": {
      "$ref": "#/definitions/Kind"
    }
  },
  "definitions": {
    "Data": {
      "type": "object",
      "required": [
        "raw_data"
      ],
      "properties": {
        "raw_data": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    },
    "Kind": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "B"
          ]
        },
        {
          "type": "object",
          "required": [
            "A"
          ],
          "properties": {
            "A": {
              "type": "object",
              "required": [
                "description",
                "value"
              ],
              "properties": {
                "description": {
                  "type": "string"
                },
                "value": {
                  "type": "integer",
                  "format": "int32"
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "C"
          ],
          "properties": {
            "C": {
              "type": "object",
              "required": [
                "id"
              ],
              "properties": {
                "id": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}